<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="lateralpraxis.lpsmartfarm.farmblock.ActivityViewInterCropping">
    <TextView
        style="@style/style_topBar1"
        android:text="@string/label_viewInterCropping"
        android:textAllCaps="true" />
    <LinearLayout
        style="@style/style_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/linkAdd"
            style="@style/style_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="6sp"
            android:text="@string/label_linkAdd" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:weightSum="1">

        <TextView
            style="@style/style_dataLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/datalabel_farmerName" />

        <TextView
            android:id="@+id/tvFarmer"
            style="@style/style_dataField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:inputType="none"
            android:text="@string/datalabel_farmerName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:weightSum="1">

        <TextView
            style="@style/style_dataLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/mobile" />


        <TextView
            android:id="@+id/tvMobile"
            style="@style/style_dataField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:inputType="none"
            android:text="@string/mobile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFarmBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:weightSum="1">

        <TextView
            style="@style/style_dataLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/label_farmBlock" />

        <TextView
            android:id="@+id/tvFarmBlock"
            style="@style/style_dataField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:inputType="none"
            android:text="@string/label_farmBlock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:weightSum="1">

        <TextView
            style="@style/style_dataLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/datalabel_farmBlockPlantationCode" />

        <TextView
            android:id="@+id/tvPlantationCode"
            style="@style/style_dataField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:inputType="none"
            android:text="@string/label_farmBlock" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/datalabel_NoRecord"
        android:textColor="@color/colorBlack" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="1dip"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/colorGold"
        android:dividerHeight="1sp"
        android:fadeScrollbars="false"
        android:focusable="false"
        tools:ignore="RtlHardcoded,NestedScrolling"></ListView>
        <View
            android:id="@+id/tvDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGold" />
    </LinearLayout>
</LinearLayout>
