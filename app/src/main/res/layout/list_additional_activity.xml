<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="4sp">

    <TextView
        android:id="@+id/tvUniqueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvFilePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/tableLayoutTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1.0dip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:stretchColumns="0,1,2,3"
        android:visibility="visible">
        <!-- 4/0 -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip">

            <!-- 4/1 -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <!-- 4/2 -->

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <!-- 4/4 -->
            <Button
                android:id="@+id/btnViewAttach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:background="@android:color/transparent"
                android:drawableEnd="@mipmap/ic_attach"
                android:drawableRight="@mipmap/ic_attach"
                android:visibility="visible" />
            <!-- 4/4 -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:background="@android:color/transparent"
                android:drawableEnd="@mipmap/ic_delete"
                android:drawableRight="@mipmap/ic_delete"
                android:visibility="visible" />
        </TableRow>
    </TableLayout>
</LinearLayout>
