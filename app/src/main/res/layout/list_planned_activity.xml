<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="4sp"
    tools:ignore="RtlHardcoded,RtlSymmetry">
    <!-- 1/0 -->
    <TextView
        android:id="@+id/tvPlannerDetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />
    <!-- 1/1 -->
    <TextView
        android:id="@+id/tvParameterDetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />
    <!-- 1/2 -->
    <TextView
        android:id="@+id/tvActivityId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />
    <!-- 1/3 -->
    <TextView
        android:id="@+id/tvSubActivityId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />
    <!-- 1/4 -->
    <TableLayout
        android:id="@+id/tableLayoutTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1.0dip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:stretchColumns="0,1,2,3,4"
        android:visibility="visible" >
        <!-- 4/0 -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip"
            tools:ignore="UselessParent">

            <!-- 4/1 -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:text="@string/app_name"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <!-- 4/2 -->

            <TextView
                android:id="@+id/tvPlanned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_weight=".17"
                android:textColor="@color/colorGreen"
                android:textStyle="bold" />
            <!-- 4/3 -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_weight=".16"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />
            <!-- 4/4 -->
            <EditText
                android:id="@+id/etActualValue"
                android:layout_width="0dp"
                style="@style/style_dataField"
                android:inputType="number"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight=".17"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:maxLength="6"
                android:textColor="@color/colorBlack"
                />
            <!-- 4/5 -->
            <TextView
                android:id="@+id/tvPreviousValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <!-- 4/6 -->
            <TextView
                android:id="@+id/tvUom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />

            <!-- 4/7 -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>
    <!-- 5/0 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvRemarks"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack" />
        <Button
            android:id="@+id/btnViewAttach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@android:color/transparent"
            android:drawableEnd="@mipmap/ic_attach"
            android:drawableRight="@mipmap/ic_attach"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvUniqueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>
