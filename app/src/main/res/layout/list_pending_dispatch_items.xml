<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="4sp" android:paddingStart="4sp">
    <!--0-->
    <TextView
        android:id="@+id/tvDispatchId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvBookingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <!--1-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <!--1/0-->

        <TextView
            android:id="@+id/tvDispatchItem"
            style="@style/style_dataLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />
        <!--1/0-->

        <TextView
            android:id="@+id/tvDispatchItemId"
            style="@style/style_dataLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <!--1/1-->

        <TextView
            android:id="@+id/tvDispatchItemQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <!--1/2-->

        <TextView
            android:id="@+id/tvDispatchItemRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <!--1/3-->

        <TextView
            android:id="@+id/tvDispatchItemAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <!--1/4-->

        <TextView
            android:id="@+id/tvDeliveryQty"
            style="@style/style_dataField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:visibility="gone" />
        <!--1/5-->

        <EditText
            android:id="@+id/etDeliveryQty"
            style="@style/style_dataField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:inputType="number" />
        <!-- 1/6 -->

    </LinearLayout>

</LinearLayout>