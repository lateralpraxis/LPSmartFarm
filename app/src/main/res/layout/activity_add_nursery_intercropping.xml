<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    tools:context="lateralpraxis.lpsmartfarm.nursery.ActivityAddNurseryInterCropping">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            style="@style/style_topBar1"
            android:text="@string/label_addNurseryInterCropping"
            android:textAllCaps="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/style_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/tvNurseryUniqueId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvNurseryId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!--Nursery Type-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/style_dataLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="@string/datalabel_nurseryType" />

                    <TextView
                        android:id="@+id/tvNurseryType"
                        style="@style/style_dataField"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:inputType="none"
                        android:text="@string/datalabel_nurseryType" />

                </LinearLayout>

                <!--Nursery Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/style_dataLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="@string/datalabel_nurseryName" />

                    <TextView
                        android:id="@+id/tvNurseryName"
                        style="@style/style_dataField"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:inputType="none"
                        android:text="@string/datalabel_nurseryName" />

                </LinearLayout>

                <!--Zone-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/style_dataLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="@string/datalabel_zone" />

                    <TextView
                        android:id="@+id/tvZoneUniqueId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvZoneId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvZone"
                        style="@style/style_dataField"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:inputType="none"
                        android:text="@string/datalabel_zone" />

                </LinearLayout>

                <!--Plantation-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/style_dataLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="@string/datalabel_farmBlockPlantationCode" />

                    <TextView
                        android:id="@+id/tvPlantationUniqueId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPlantationCode"
                        style="@style/style_dataField"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:inputType="none"
                        android:text="@string/datalabel_farmBlockPlantationCode" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Crop-->
                    <LinearLayout
                        android:id="@+id/llCrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/style_dataLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:text="@string/label_crop" />

                        <Spinner
                            android:id="@+id/spCrop"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>

                    <!--Variety-->
                    <LinearLayout
                        android:id="@+id/llVariety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/style_dataLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:text="@string/label_variety" />

                        <Spinner
                            android:id="@+id/spVariety"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>

                    <!--Season-->
                    <LinearLayout
                        android:id="@+id/llSeason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/style_dataLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:text="@string/label_season" />

                        <Spinner
                            android:id="@+id/spSeason"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>

                    <!--Area-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/style_dataLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:text="@string/label_nurintercroparea" />

                        <EditText
                            android:id="@+id/etArea"
                            style="@style/style_dataField"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:hint="@string/hint_nurintercroparea"
                            android:inputType="number"
                            android:maxLength="12" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/btnAdd"
                        style="@style/style_nextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/datalabel_Add"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        style="@style/style_sectionHead"
                        android:text="@string/label_interCropping"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:id="@+id/rlCroppingPattern"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <lateralpraxis.lpsmartfarm.NonScrollableListView
                            android:id="@+id/listCroppingPattern"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/colorGold"
                            android:dividerHeight="1sp" />
                        <View
                            android:id="@+id/tvDivider"
                            android:layout_below="@+id/listCroppingPattern"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorGold" />
                        <TextView
                            style="@style/style_layout"
                            android:id="@+id/tvEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/datalabel_NoRecord" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/button_vertical_margin"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/btnBack"
                            style="@style/style_backButton"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:text="@string/back" />

                        <Button
                            android:id="@+id/btnNext"
                            style="@style/style_nextButton"
                            android:layout_gravity="end"
                            android:layout_weight="0.5"
                            android:text="@string/datalabel_Next" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
