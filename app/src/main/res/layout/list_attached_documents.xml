<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDocumentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDocumentPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvUniqueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- 1/0 -->

        <TextView
            android:id="@+id/tvDocumentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnDelete"
            android:layout_toStartOf="@+id/btnDelete"
            android:textColor="@color/colorBlack"
            android:text="@string/app_name"
            android:textStyle="bold" />

        <!-- 1/1 -->

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:drawableEnd="@android:drawable/ic_delete"
            android:drawableRight="@android:drawable/ic_delete" />
        <TextView
            android:id="@+id/tvDocumentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDocumentType"
            android:layout_toLeftOf="@+id/btnViewAttach"
            android:layout_toStartOf="@+id/btnViewAttach"
            android:textColor="@color/colorBlack"
            android:text="@string/app_name"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvDocumentNumberValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDocumentName"
            android:layout_toLeftOf="@+id/btnViewAttach"
            android:layout_toStartOf="@+id/btnViewAttach"
            android:textColor="@color/colorBlack"
            android:text="@string/app_name"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnViewAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnDelete"
            android:layout_toStartOf="@+id/btnDelete"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/attach"
            android:drawableRight="@drawable/attach" />
    </RelativeLayout>

</LinearLayout>