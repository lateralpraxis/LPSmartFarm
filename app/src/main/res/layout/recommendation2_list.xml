<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tvUniqueId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tvFilePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />
    <TableLayout
        android:id="@+id/tableLayoutTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:visibility="visible" >
        <!-- 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip">

        <!-- 1/1 -->
        <TextView
            android:id="@+id/tvWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:textColor="@color/colorLeaf"
            android:textStyle="bold" />

        </TableRow>
        <!-- 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip">

            <!-- 2/1 -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack" />

            <!-- 2/2 -->
            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:textColor="@color/colorGreen" />

            <!-- 2/3 -->
            <Button
                android:id="@+id/btnViewAttach"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight=".1"
                android:background="@android:color/transparent"
                android:drawableEnd="@mipmap/ic_attach"
                android:drawableRight="@mipmap/ic_attach"
                android:visibility="visible" />

            <!-- 2/4 -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight=".1"
                android:background="@android:color/transparent"
                android:drawableEnd="@mipmap/ic_delete"
                android:drawableRight="@mipmap/ic_delete"
                android:visibility="visible" />
        </TableRow>
        <!-- 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip">

            <!-- 3/1 -->
            <TextView
                android:id="@+id/tvRemarks"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="@color/colorBlack" />

        </TableRow>
    </TableLayout>
</LinearLayout>
